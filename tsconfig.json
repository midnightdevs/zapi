{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "@SuperClasses/*": [ "./src/core/classes*" ],
      "@Domains/*": [ "./src/domains/*" ],
      "@Core/*": [ "./src/core/*" ],
      "@/*": [ "./src/*" ]
    }
  },
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/**/tests/*.ts"]
}